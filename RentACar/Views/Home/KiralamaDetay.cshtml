@model  RentACar.Models.ViewModels.KiralamaDetayViewModel
@{
    ViewBag.Title = "KiralamaDetay";
    ViewBag.Aciklama = "En iyi kiralama deneyimi için";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="r-car-info-wrapper">
    <div class="container">
        <div class="r-car-info-header clearfix">
            <div class="r-car-top-info">
                <div class="r-car-rating">
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <i class="fa fa-star"></i>
                    <span class="r-rating-text"> CAR RATING: 5/5 </span>
                </div>
                <h2 class="r-car-name"> @Model.Arac.Marka <span>@Model.Arac.Model</span> </h2>
            </div>

            <div class="r-car-offer">
                <div class="r-offer-cost">
                    <span class="fa fa-usd r-currency"></span> @Model.Arac.GunlukFiyat <small>Günlük</small>
                </div>
                <span class="r-tax-info"> KDV dahil </span>
            </div>
        </div>

        <div class="r-car-whole-info">
            <div class="row">
                <div class="col-lg-7 col-md-12 col-sm-12 col-xs-12">
                    <div class="r-car-product-carousel-wrapper">
                        <div class="r-car-product-carousel owl-carousel" data-slider-id="r-product-slider" id="productSlider">
                            @foreach (var item in Model.Arac.Resims)
                            {
                                <div class="item">
                                    <img src="@item.ResimUrl" alt="@item.ResimUrl" class="img-fluid" />
                                </div>
                            }
                        </div>

                        <ul class="owl-thumbs r-car-product-carousel-thumb" data-slider-id="r-product-slider">
                            @foreach (var item in Model.Arac.Resims)
                            {
                                <li class="owl-thumb-item"> <img src="@item.ResimUrl" alt="" class="@item.ResimUrl" /> </li>
                            }
                        </ul>
                    </div>
                </div>

                <div class="col-lg-5 col-md-12 col-sm-12 col-xs-12">
                    <div class="r-car-info-content">
                        <span class="r-reg-year">Registered @Model.Arac.Yil</span>
                        <h2 class="r-product-name">@Model.Arac.Marka <span>@Model.Arac.Model</span> </h2>
                        <p class="r-product-description">@Model.Arac.Aciklama</p>
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <tr>
                                    <td>@Model.Arac.Kilometre km</td>
                                    <td>@Model.Arac.KoltukSayisi kişi </td>
                                </tr>
                                <tr>
                                    <td>@Model.Arac.Renk</td>
                                    <td>@Model.Arac.Sinif</td>
                                </tr>
                                <tr>
                                    <td>@Model.Arac.Vites</td>
                                    <td>@Model.Arac.Yakit</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <!-- /r-car-info-content -->
                </div>
            </div>
        </div> <!-- /r-car-whole-info -->

        <div class="row">
            <div class="col-lg-3 col-md-4 col-sm-12">
                <div class="r-product-testimonial-wrapper">
                    <h4>Testimonials</h4>
                    <div class="owl-carousel" id="productTestimonial">
                        <div class="r-testimonial-box">
                            "We know the difference is in the details and that’s why our car rental services, in the tourism and business."
                        </div>
                        <div class="r-testimonial-box">
                            "We know the difference is in the details and that’s why our car rental services, in the tourism and business."
                        </div>
                        <div class="r-testimonial-box">
                            "We know the difference is in the details and that’s why our car rental services, in the tourism and business."
                        </div>
                    </div>
                </div>

                <div class="r-product-discount">
                    <span class="r-discount">%5 İNDİRİM</span>
                    <p class="r-discount-content"> Sitemize<strong> üye olan</strong> müşterilerimze özel.</p>
                </div>
            </div>

            <div class="col-lg-9 col-md-8 col-sm-12">
                <div class="r-site-default-accordion">
                    <div class="r-accordion-header">
                        <h2 class="r-accordion-heading">Kiralama Detayları</h2>
                        <i class="fa fa-angle-up"></i>
                    </div>
                    <div class="r-accordion-body">
                        @using (Html.BeginForm("Araclar", "Home", FormMethod.Post, new { @class = "comment-form" }))
                        {
                            <div class="row">
                                <div class="col-md-6 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <label>Teslim alma noktası</label>
                                        <div class="input-group">
                                            @Html.DropDownList("TeslimAlmaNoktasi", (new List<SelectListItem>() {
                new SelectListItem { Text = "Malatya ofis", Value = "Malatya ofis" } }), "Teslim alma noktası", new { @class = "form-control"})
                                            <span class="input-group-addon"><i class="fa fa-map-marker"></i></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <label>Teslim etme noktası</label>
                                        <div class="input-group">
                                            @Html.DropDownList("TeslimEtmeNoktasi", (new List<SelectListItem>() {
                new SelectListItem { Text = "Malatya ofis", Value = "Malatya ofis" } }), "Teslim etme noktası", new { @class = "form-control"})
                                            <span class="input-group-addon"><i class="fa fa-map-marker"></i></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <label>Teslim alma tarihi</label>
                                        <div class="input-group">
                                            <input type="datetime-local" name="TeslimAlmaTarihi" class="form-control datepicker" placeholder="dd/mm/yyyy">
                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <label>Teslim etme tarihi</label>
                                        <div class="input-group">
                                            <input type="datetime-local" name="TeslimEtmeTarihi" class="form-control datepicker" placeholder="dd/mm/yyyy">
                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="r-site-default-accordion">
                    <div class="r-accordion-header">
                        <h2 class="r-accordion-heading">Ekstra hizmetler</h2>
                        <i class="fa fa-angle-up"></i>
                    </div>
                    <div class="r-accordion-body">
                        <form>
                            <div class="row">
                                <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
                                    @*6 yı 12 yap sonra dene*@
                                    <ul class="r-fee-list">
                                        @foreach (var item in Model.EkHizmetler)
                                        {
                                            <li class="clearfix r-site-checkbox">
                                                <label>
                                                    @item.Ad
                                                    <span class="r-extra-fee"> @item.Tutar TL</span>
                                                    <input type="checkbox" />
                                                    <span class="r-site-checkbox-icon"> <i class="fa fa-check-square"></i> </span>
                                                </label>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>

                <div class="r-site-default-accordion">
                    <div class="r-accordion-header">
                        <h2 class="r-accordion-heading">Müşteri Bilgileri</h2>
                        <i class="fa fa-angle-up"></i>
                    </div>
                    <div class="r-accordion-body">
                        <form>
                            <div class="row">
                                <div class="col-md-6 col-sm-12">
                                    <div class="form-group">
                                        <label>Full Name</label>
                                        <input type="text" class="form-control" placeholder="Your full name" />
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-12">
                                    <div class="form-group">
                                        <label>Email Address</label>
                                        <input type="text" class="form-control" placeholder="Example@gmail.com" />
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-12">
                                    <div class="form-group">
                                        <label>Phone Number</label>
                                        <input type="text" class="form-control" placeholder="" />
                                    </div>
                                </div>
                                <div class="col-md-6 col-sm-12">
                                    <div class="form-group">
                                        <label>Nationality</label>
                                        <select class="form-control">
                                            <option value="">United State</option>
                                            <option value="">India</option>
                                            <option value="">Russia</option>
                                            <option value="">China</option>
                                            <option value="">Australia</option>
                                        </select>
                                    </div>
                                </div>

                            </div>

                        </form>
                    </div>
                </div>

                <div class="r-site-default-accordion">
                    <div class="r-accordion-header">
                        <h2 class="r-accordion-heading">Ödeme seçenekleri</h2>
                        <i class="fa fa-angle-up"></i>
                    </div>
                    <div class="r-accordion-body">
                        <form>
                            <div class="r-payment-options">
                                <div class="row">
                                    <div class="col-md-6 col-sm-12">
                                        <div class="r-site-checkbox">
                                            <label>
                                                <input type="checkbox" />
                                                <span class="r-site-checkbox-icon"> <i class="fa fa-check-square"></i> </span>
                                                <span class="r-site-checkbox-text">Direct bank Transfer</span>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-12">
                                        <div class="r-site-checkbox">
                                            <label>
                                                <input type="checkbox" />
                                                <span class="r-site-checkbox-icon"> <i class="fa fa-check-square"></i> </span>
                                                <span class="r-site-checkbox-text">Credit Card</span>
                                            </label>
                                            <img src="assets/images/payment-icons.jpg" alt="" class="" />
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-12">
                                        <div class="r-site-checkbox">
                                            <label>
                                                <input type="checkbox" />
                                                <span class="r-site-checkbox-icon"> <i class="fa fa-check-square"></i> </span>
                                                <span class="r-site-checkbox-text">Cheque Payment</span>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-12">
                                        <div class="r-site-checkbox">
                                            <label>
                                                <input type="checkbox" />
                                                <span class="r-site-checkbox-icon"> <i class="fa fa-check-square"></i> </span>
                                                <span class="r-site-checkbox-text">Paypal</span>
                                            </label>
                                            <img src="assets/images/paypal-icon.jpg" alt="" class="" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="r-site-default-accordion">
                    <div class="r-accordion-header">
                        <h2 class="r-accordion-heading">Fatura bilgileri</h2>
                        <i class="fa fa-angle-up"></i>
                    </div>
                    <div class="r-accordion-body">
                        <form>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <textarea class="form-control" placeholder="Additional note"></textarea>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="r-booking-form-submission">
                    <div class="row">
                        <div class="col-lg-6 col-md-12">
                            <div class="r-site-checkbox">
                                <label>
                                    <input type="checkbox" />
                                    <span class="r-site-checkbox-icon"> <i class="fa fa-check-square"></i> </span>
                                    <span class="r-site-checkbox-text">I accept all informations & payment eyc</span>
                                </label>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-12 r-submission-btn-wrapper">
                            <input type="reset" class="btn-default" value="İşlemi iptal et" />
                            <input type="submit" class="btn-primary" value="Rezervasyon yap" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="r-similar-product">
            <h2 class="heading"> Similar Cars </h2>
            <div class="r-best-offer-list owl-carousel" id="similarProductCarousel">
                @foreach (var item in Model.BenzerAraclar)
                {
                    @*------------------------!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!1****************----------------*@
                    <div class="r-best-offer-single">
                        <div class="r-best-offer-in">
                            <div class="r-offer-img">
                                <a class="d-inline-block" href="#"><img src="~/assets/images/car-1.png" class="img-fluid d-block m-auto" alt=""></a>
                                <div class="r-offer-img-over">
                                    <i class="fa fa-search"></i>
                                </div>
                            </div>
                            <div class="r-best-offer-content">
                                <a href="#"><b>@item.Marka</b> @item.Model</a>
                                <p>Start at <b>@item.GunlukFiyat</b> günlük</p>
                                <ul class="pl-0 mb-0">
                                    <li><i class="fa fa-car"></i><span>@item.Yil</span></li>
                                    <li><i class="fa fa-cogs"></i><span>@item.Vites</span></li>
                                    <li><i class="fa fa-beer"></i><span>@item.Yakit</span></li>
                                    <li><i class="fa fa-road"></i><span>@item.Kilometre km</span></li>
                                </ul>
                            </div>
                            <div class="r-offer-rewst-this">
                                <a href="@Url.Action("KiralamaDetay","Home", new { Id=item.Id })"><span class="text-uppercase">Bu arabayı kirala</span></a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section> <!-- /r-car-info -->