    <link href="~/Areas/admin/Content/typicons.min.css" rel="stylesheet" />
    <!-- Bootstrap -->
    <link href="~/Areas/admin/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- Template -->
    <link href="~/Areas/admin/Content/main.css" rel="stylesheet" />
