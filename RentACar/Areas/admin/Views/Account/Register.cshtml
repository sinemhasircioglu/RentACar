                <strong>or</strong>
                <button class="btn btn-login" data-toggle="modal" data-target="#signUpModal">Sign up</button>
            </div>
        </div>*@
    <!-- /Page container -->
    <!-- Sign up modal -->
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="modal fade in" id="signUpModal" tabindex="-1" role="dialog" aria-labelledby="signUpModal" aria-hidden="false" style="display: block;">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h4 class="modal-title">Kayıt olun</h4>
                    </div>
                    @if (TempData["Bilgi"] != null)
                    {
                        <div class="alert alert-success">@TempData["Bilgi"]</div>
                    }
                    <div class="modal-body">
                        <form role="form">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Adınız Soyadınız" name="AdSoyad" required="" autofocus="">
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control" placeholder="Email" name="Email" required="" autofocus="">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" name="Sifre" placeholder="Şifre" required="">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" placeholder="Şifre tekrar" required="">
                            </div>
                            <label>
                                @Html.ActionLink("Zaten bir hesabınız var mı? Giriş yapın", "Login", "Account", new { area = "admin" }, new { style = "color : navy" })
                            </label>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">İptal</button>
                        <button type="submit" class="btn btn-primary">Kayıt</button>
                    </div>
                </div>
            </div>
        </div>
    }
    <!-- SCRIPTS -->
    <script src="~/Areas/admin/Scripts/plugins/jquery.min.js"></script>
    <script src="~/Areas/admin/Scripts/plugins/modernizr.min.js"></script>
    <script src="~/Areas/admin/Scripts/plugins/bootstrap.min.js"></script>
    <!-- Site -->
    <script src="~/Areas/admin/Scripts/main.js"></script>

    <!-- Mirrored from karlomikus.com/saltkin/login.html by HTTrack Website Copier/3.x [XR&CO'2014], Thu, 14 Apr 2016 14:52:57 GMT -->
