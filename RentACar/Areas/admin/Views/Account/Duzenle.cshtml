@model RentACar.Data.Kullanici
@{
    ViewBag.Title = "Duzenle";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <header class="panel-heading">@ViewBag.Title</header>
                <div class="panel-body">
                    <form role="form" method="post">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary()
                        @Html.HiddenFor(x => x.Id)
                        <div class="form-group">
                            <label for="kategoriAdi">Adınız Soyadınız</label>
                            @Html.TextBoxFor(x => x.AdSoyad, new { @class = "form-control", id = "AdSoyad", placeholder = "Ad Soyad" })
                        </div>
                        <div class="form-group">
                            <label for="kategoriUrl">Email adresiniz</label>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", id = "Email", placeholder = "Email" })
                        </div>
                        <div class="form-group">
                            <label for="kategoriUrl">Sifreniz</label>
                            @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control", id = "Sifre", placeholder = "Sifre" })
                        </div>

                        <button type="submit" class="btn btn-default">Değişiklikleri kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>