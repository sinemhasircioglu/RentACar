@using PagedList.Mvc;
@model PagedList.IPagedList<RentACar.Data.Hizmet>
@{
    ViewBag.Title = "Hizmet Index";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-md-12">
    <div class="panel panel-default">
        <header class="panel-heading">@ViewBag.Title</header>
        <div class="panel-body">
            @if (TempData["Bilgi"] != null)
            {
                <div class="alert alert-success">@TempData["Bilgi"]</div>
            }
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Hizmet Adı</th>
                            <th>Hizmet Açıklaması</th>
                            <th>Tutar</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><span class="label label-success">@item.Id</span></td>
                                <td>@item.Ad</td>
                                <td>@item.Aciklama</td>
                                <td>@item.Tutar</td>
                                <td>
                                    <a href="@Url.Action("Duzenle","Hizmet",new { Id=item.Id})" class="btn btn-default btn-sm">Düzenle</a>
                                    <a href="@Url.Action("Sil","Hizmet", new { Id=item.Id })" class="btn btn-default btn-sm">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @Html.PagedListPager(Model, sayfa => Url.Action("Index", new { sayfa }), PagedListRenderOptions.Classic)
        </div>
    </div>
</div>