@model RentACar.Data.Islem
@{
    ViewBag.Title = "İşlem Duzenle";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
    var alim = Model.AlimTarihi;
    var teslim = Model.TeslimTarihi;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <header class="panel-heading">@ViewBag.Title</header>
                <div class="panel-body">
                    <form role="form" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary()
                        @Html.HiddenFor(x => x.Id)
                        <div class="form-group">
                            <label for="MusteriId">Müşteri</label>
                            @Html.DropDownListFor(Model => Model.MusteriId, new SelectList(ViewBag.Musteri, "Id", "AdSoyad"), ("Seçiniz"), new { @class = "form-control", id = "MusteriId" })
                        </div>
                        <div class="form-group">
                            <label for="AracId">Araç</label>
                            @Html.DropDownListFor(Model => Model.AracId, new SelectList(ViewBag.Arac, "Id", "Id"), ("Seçiniz"), new { @class = "form-control", id = "AracId" })
                        </div>
                        <div class="form-group">
                            <label for="Aciklama">İşlem tutar</label>
                            @Html.TextBoxFor(x => x.Tutar, new { @class = "form-control", id = "Tutar", placeholder = "İşlem tutarı" })
                        </div>
                        <div>
                            <label for="party-time">Alış Tarihi</label>
                            <input type="datetime" id="AlimTarihi" name="AlimTarihi" min="@DateTime.Now" class="form-control" value="@alim" />
                        </div>
                        <div>
                            <label for="party-time">Teslim Tarihi</label>
                            <input type="datetime" id="TeslimTarihi" name="TeslimTarihi" min="@DateTime.Now" class="form-control" value="@teslim"/>
                        </div>
                        <div class="form-group">
                            <label for="Aciklama">Tahmini yapılacak km</label>
                            @Html.TextBoxFor(x => x.TahminiKm, new { @class = "form-control", id = "TahminiKm", placeholder = "Tahmini yapılacak km" })
                        </div>
                        <div class="form-group">
                            <label for="Aciklama">TC Kimlik No</label>
                            @Html.TextBoxFor(x => x.TcKimlikNo, new { @class = "form-control", id = "TcKimlikNo", placeholder = "TC kimlik No" })
                        </div>
                        <div class="form-group">
                            <label for="Aciklama">Telefon</label>
                            @Html.TextBoxFor(x => x.Telefon, new { @class = "form-control", id = "Telefon", placeholder = "Telefon" })
                        </div>
                        <button type="submit" class="btn btn-default">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>